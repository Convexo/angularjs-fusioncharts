        "yAxisName": "Number of mentions",
        "subCaption": "(iPhone Vs Samsung)",
        "numbersuffix": "M",
        "yAxisMaxValue": "2",
        "plottooltext": "$seriesName was mentioned <b>$dataValue</b> times on Twitter in $label",
        "theme": "fusion"
    };

    $scope.categories = [
        { 
            "category": 
            [
                { "label": "2007" },
                { "label": "2008" },
