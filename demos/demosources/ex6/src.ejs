<!-- In the HTML file -->

<style >
    .btn { font-family: 'Source Sans Pro'; }
    .btn.btn-primary { background: #4a4d8c;  transition: all 300ms;}
    .btn.btn-primary:hover{ background: #5c62b5; }
    .btn.btn-primary:active{ background:#4a4d8c }
</style>
<div ng-app='myApp'>
    <div ng-controller='MyController'>    
        <div
            fusioncharts
            width="600" 
            height="400"
            type="column2d"
            datasource="{{dataSource}}">
        </div>
        <div style='display: flex; justify-content: center'>
            <a class="btn btn-primary" ng-click="updateMyChartData()">Click me to change data</a>
        </div>
    </div>
</div>     
   
<% } %>